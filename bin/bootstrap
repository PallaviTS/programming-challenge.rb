#!/usr/bin/env bash

##
# Name the project
if [[ ! $@ =~ '--skip-name' ]]; then
  read -p "What's the name of your project? [Microservice] " name
fi
name=${name:-Microservice}

sed -i '' -e "s/RailsApiTemplate/$name/g" config/application.rb
sed -i '' -e "s/RailsApiTemplate/$name/g" README.md

name_underscore=$(echo $name | sed -e 's/\([a-z]\)\([A-Z]\)/\1_\2/' | tr '[:upper:]' '[:lower:]')
sed -i '' -e "s/rails_api_template/$name_underscore/g" config/database.yml


